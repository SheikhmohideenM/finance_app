<div class="min-h-screen flex items-center justify-center bg-[#f6f2ee] px-4">
  <div class="max-w-6xl w-full bg-white rounded-2xl shadow-lg grid grid-cols-1 md:grid-cols-2 overflow-hidden">

    <!-- LEFT -->
    <div class="hidden md:flex bg-gray-900 text-white p-10 flex-col justify-between">
      <h1 class="text-xl font-bold">finance</h1>

      <div>
        <h2 class="text-3xl font-semibold leading-snug">
          Keep track of your money<br>and save for your future
        </h2>
        <p class="mt-4 text-gray-300 text-sm">
          Track transactions, set budgets, and control your spending easily.
        </p>
      </div>
    </div>

    <!-- RIGHT -->
    <div class="p-10 flex items-center justify-center">
      <div class="w-full max-w-md">
        <h2 class="text-2xl font-semibold mb-6">Sign Up</h2>

        <%= form_with model: @user, url: signup_path, class: "space-y-4" do |f| %>

          <div>
            <%= f.label :name, class: "block text-sm font-medium" %>
            <%= f.text_field :name, class: "mt-1 w-full rounded-md border-gray-300" %>
          </div>

          <div>
            <%= f.label :email, class: "block text-sm font-medium" %>
            <%= f.email_field :email, class: "mt-1 w-full rounded-md border-gray-300" %>
          </div>

          <div>
            <%= f.label :password, "Create Password", class: "block text-sm font-medium" %>
            <%= f.password_field :password, class: "mt-1 w-full rounded-md border-gray-300" %>
            <p class="text-xs text-gray-500 mt-1">Minimum 8 characters</p>
          </div>

          <%= f.submit "Create Account",
                class: "w-full bg-black text-white py-2 rounded-md hover:bg-gray-800" %>
        <% end %>

        <p class="mt-4 text-sm text-center">
          Already have an account?
          <%= link_to "Login", login_path, class: "underline font-medium" %>
        </p>
      </div>
    </div>

  </div>
</div>
